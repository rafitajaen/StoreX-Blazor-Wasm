

<MudCard Elevation="25" Square="true" Class="@Class" Style="@Style">

    @if(SelectedSupplier.Id != Guid.Empty)
    {
        <MudCardHeader>
            <CardHeaderAvatar>
                 @if (string.IsNullOrEmpty(SelectedSupplier.ImagePath))
                {
                    <MudAvatar Size="Size.Large" Color="Color.Primary" Class="ma-2">@SelectedSupplier.Name?.ToUpper().FirstOrDefault()</MudAvatar>
                }
                else
                {
                    <MudAvatar Size="Size.Large" Image="@SelectedSupplier.ImagePath" />
                }
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudText Typo="Typo.body1">@SelectedSupplier.Name</MudText>
                <MudText Typo="Typo.caption">@SelectedSupplier.Email</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudSpacer />
                <MudMenu Icon="@Icons.Material.Filled.Settings" Color="Color.Default" Dense="true" OffsetX="true" Direction="Direction.Bottom">
                    <MudMenuItem Style="color:orange!important">Edit</MudMenuItem>
                    <MudMenuItem Style="color:red!important">Delete</MudMenuItem>
                    <MudMenuItem Style="color:green!important">Create</MudMenuItem>
                </MudMenu>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText Class="mb-8"Typo="Typo.body2">@SelectedSupplier.Description</MudText>
            <MudContainer>
                @if(SelectedSupplier.Phone != string.Empty)
                {
                    <MudButton Href="@($"tel:{SelectedSupplier.Phone}")" Target="_blank" Variant="Variant.Outlined" StartIcon="@Icons.Filled.Call" Color="Color.Tertiary" Size="Size.Small">
                        @SelectedSupplier.Phone
                    </MudButton>
                }
                @if(SelectedSupplier.Email != string.Empty)
                {
                    <MudButton Href="@($"mailto:{SelectedSupplier.Email}")" Target="_blank" Variant="Variant.Outlined" StartIcon="@Icons.Filled.Email" Color="Color.Tertiary" Size="Size.Small">
                        @SelectedSupplier.Email
                    </MudButton>
                }
                @if(SelectedSupplier.WebsiteUrl != string.Empty)
                {
                    <MudButton Href="SelectedSupplier.WebsiteUrl" Target="_blank" Variant="Variant.Outlined" StartIcon="@Icons.Filled.Web" Color="Color.Tertiary" Size="Size.Small">
                        @SelectedSupplier.WebsiteUrl
                    </MudButton>
                }
            </MudContainer>
        </MudCardContent>
    }
    else
    {
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudSkeleton SkeletonType="SkeletonType.Circle" Animation="Animation.False" Height="40px" Width="40px"/>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <MudSkeleton Animation="Animation.False" Width="40%" />
                <MudSkeleton Animation="Animation.False" Width="60%" />
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
                <MudSkeleton Width="80%" Animation="Animation.False"/>
                <MudSkeleton Width="60%" Animation="Animation.False"/>
        </MudCardContent>
    }
</MudCard>


@code
{
    [Parameter]    public string? Class { get; set; }
    [Parameter]    public string? Style { get; set; }
    [Parameter]    public bool ViewAll {get; set;}
    [Parameter]    public SupplierDto SelectedSupplier { get; set; } = default!;
    [Parameter]     public bool Start { get; set; } = default!;

}